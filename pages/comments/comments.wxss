/* pages/comments.wxss */
page{
  width:100%;
  height: 100%;
  align-items: center;
  position: relative;
}
.background-img{
  position: absolute;
  height:100%;
  width: 250%;
}
.comment{
  position: absolute;
  width: 92%;
  height: 100%;
  font-size: 20px;
  align-items: center;
}
.comment-back{
  position: absolute;
  height:100%;
  width: 100%;
  margin-left: 5%;
}
.details{
  width: 80%;
  position:absolute;
  margin-top: 30%;
  margin-left: 18%;
  display: flex;
  flex-direction: column;
  font-size: 16px;
}
.details image{
  width:95%;
}
.score-date{
  display: flex;
  flex-direction: row;
}
.bottom-bar{
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: row;
  border-radius: 10px 10px 0 0;
  background-color: white;
  width: 100%;
  height: 60px;
  font-size: 10px;
  padding-top: 20px;
}
.bottom-bar image{
  width: 25px;
  height: 25px;
}
.like{
  margin-left: 40%;
  align-items: center;
  display: flex;
  flex-direction: column;
}
.share{
  margin-left: 20px;
  margin-right: 20px;
  align-items: center;
  display: flex;
  flex-direction: column;
}
.user-img{
  width: 30px;
  height: 30px;
  background-size: cover;
}