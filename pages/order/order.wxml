<view class="orders">
  <view class="order" wx:for="{{orders}}" wx:key="none">
    <text style="font-size: 20px;margin-left:20px;margin-bottom:5px;">订单号{{index+1}}</text>
    <view class="details">
      <image src="{{item.imgurl}}"></image>
      <view class="words">
        <text>书名：{{item.name}}</text>
        <text>支付金额: {{item.price}}</text>
        <text>交易时间: {{item.time}}</text>
      </view>
    </view>
  </view>
</view>
